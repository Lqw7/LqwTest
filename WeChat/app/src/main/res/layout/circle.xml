<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
         android:scrollbars="none"
         android:id="@+id/circle_scroll"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:background="@color/list_background"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <RelativeLayout

                     android:id="@+id/rel"
                     android:layout_width="match_parent"
                     android:layout_height="365dp">
                     <ImageView
                         android:id="@+id/circle_background"
                         android:scaleType="fitXY"
                         android:background="@drawable/yellowmountain"
                         android:layout_width="match_parent"
                         android:layout_height="320dp" />
                     <com.example.wechat.loadRoundImage
                         android:layout_marginLeft="260dp"
                         android:layout_alignParentBottom="true"
                         android:id="@+id/cricle_login"
                         android:src="@drawable/login"
                         android:scaleType="fitXY"
                         android:layout_width="90dp"
                         android:layout_height="90dp" />
                     <ImageView
                         android:layout_marginTop="40dp"
                         android:layout_marginLeft="310dp"
                         android:background="@drawable/circlecamera"
                         android:layout_width="30dp"
                         android:layout_height="29dp" />
                     <ImageButton
                         android:id="@+id/circle_back"
                         android:layout_marginLeft="12dp"
                         android:layout_marginTop="43dp"
                         android:background="@drawable/back"
                         android:layout_width="17dp"
                         android:layout_height="17dp" />
                     <TextView
                         android:textStyle="bold"
                         android:layout_marginTop="10dp"
                         android:layout_marginLeft="200dp"
                         android:layout_alignTop="@+id/cricle_login"
                         android:text="@string/login_name"
                         android:textSize="16sp"
                         android:textColor="@color/circle_name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
             </LinearLayout>
             <ListView
                 android:dividerHeight="0.2dp"
                 android:divider="@drawable/circle_list_divider"
                 android:scrollbars="none"
                 android:id="@+id/circle_list"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
             </ListView>
